@model ShoeShop.Models.Loai
@{
    ViewBag.Title = "NewCat";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@Html.ActionLink("Trở về trang trước", "BrandManage", null, new { @class = "btn btn-primary" })
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal row" style="margin:auto">

        <div class="col-md-12 well " style="margin-top:5%">
            <div class="panel panel-primary ">
                <div class="panel-heading">
                    <h3 class="panel-title">Thêm loại </h3>
                </div>
                <div class="panel-body">
                    <div class="form-group col-md-6 input-group" style="margin:auto;margin-top:10px">
                        @Html.LabelFor(model => model.Ten,"Tên Loại", htmlAttributes: new { @class = "input-group-addon" })
                        @Html.EditorFor(model => model.Ten, new { htmlAttributes = new { @class = "form-control" } })

                    </div>
                    @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger", style = "margin-left:40%" })

                    <div class="form-group col-md-6 input-group" style="margin:auto;margin-top:10px">
                        @Html.LabelFor(model => model.Ten, "Chủng Loại", htmlAttributes: new { @class = "input-group-addon" })
                        @Html.DropDownList("ChungLoaiID", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
           
                    
                    

    
            </div>
            <button type="submit" class="btn btn-danger btn-block btn-mini" style="margin-top:10px">Thêm</button>

        </div>

    </div>
}


@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
@Html.Raw(TempData["Success_Mess"])