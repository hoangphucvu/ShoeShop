@using ShoeShop.Models
@{
    var user = Session["user"] as QuanTri;
}
<!DOCTYPE html>

<html>
<head>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <title>@ViewBag.Title</title>
    <link href="~/Content/admin/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/admin/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/admin/css/AdminLTE.css" rel="stylesheet" type="text/css" />
</head>
<body>
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a target="_blank" href="#" class="navbar-brand">Admin.</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        DropDown
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Link 2</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
               @if (user != null)
               {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <span class="glyphicon glyphicon-user"></span>
                            <strong>Xin chào @user.Username</strong>
                            <span class="glyphicon glyphicon-chevron-down"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="navbar-login">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <p class="text-center">
                                                <span class="glyphicon glyphicon-user icon-size"></span>
                                            </p>
                                        </div>
                                        <div class="col-lg-8">
                                            <p class="text-left"><strong></strong>
                                            </p>
                                            <p class="text-left small"></p>
                                            <p class="text-left">
                                                @*<a href="#" class="btn btn-primary btn-block btn-sm">Actualizar Datos</a>*@
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li class="divider"></li>
                            <li>

                                    <div class="navbar-login navbar-login-session">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <p>
                                                    <a href="/AdminSite/LogOff" class="btn btn-danger btn-block">Đăng Xuất</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                              
                            </li>
                        </ul>
                   </li>
               }
            </ul>
               
        </div>
    </div>
</div>
<div class="navbar navbar-inverse navbar-twitch" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">
                <span class="small-nav"> <span class="logo"> <B> </span> </span>
                <span class="full-nav"> < Bootsnipp > </span>
            </a>
        </div>
        <div class="">
            <ul class="nav navbar-nav">
                <li class="active">
                    <a href="#">
                        <span class="small-nav" data-toggle="tooltip" data-placement="right" title="Quản lý size giày">
                                <span class="glyphicon glyphicon-comment"></span>
                            </span>
                        <span class="full-nav"> @Html.ActionLink("Quản lý size giày", "SizeManage", "AdminSite") </span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="small-nav" data-toggle="tooltip" data-placement="right" title="Danh mục chủng loại">
                                <span class="fa fa-comment"></span>
                            </span>
                        <span class="full-nav">@Html.ActionLink("Danh mục chủng loại", "CategoryManage", "AdminSite") </span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="small-nav" data-toggle="tooltip" data-placement="right" title="Danh mục loại">
                                <span class="glyphicon glyphicon-comment"></span>
                            </span>
                        <span class="full-nav">@Html.ActionLink("Danh mục loại", "BrandManage", "AdminSite")</span>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span class="small-nav" data-toggle="tooltip" data-placement="right" title="Danh mục sản phẩm">
                            <span class="glyphicon glyphicon-comment"></span>
                        </span>
                        <span class="full-nav">@Html.ActionLink("Danh mục sản phẩm", "ProductManage", "AdminSite")</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

    @RenderBody()  





<script type="text/javascript" src="~/Content/admin/js/jquery.min.js"></script>
<script src="~/Content/admin/js/jquery-ui-1.10.3.min.js" type="text/javascript"></script>
<script src="~/Content/admin/js/bootstrap.min.js" type="text/javascript"></script>
<script src="~/Content/admin/js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js" type="text/javascript"></script>
<script src="~/Content/admin/js/AdminLTE/app.js" type="text/javascript"></script>
<script src="~/Content/admin/js/AdminLTE/dashboard.js" type="text/javascript"></script>
@Scripts.Render("~/bundles/jquery")
@RenderSection("scripts", required: false)




</body>
</html>
